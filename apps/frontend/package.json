{
  "name": "@age-of-hero/frontend",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bunx --bun vite",
    "dev:mock": "bunx --bun vite --mode mock",
    "prebuild": "node ../../node_modules/typescript/bin/tsc -b",
    "build": "vite build",
    "lint": "eslint . --fix && node ../../node_modules/typescript/bin/tsc -b",
    "preview": "bunx --bun vite preview",
    "prepreview:ci": "tsc -b && bunx --bun vite build --mode ci",
    "preview:ci": "bunx --bun vite preview --port 5173 ",
    "test": "vitest run",
    "test:watch": "vitest",
    "ncu": "ncu -u",
    "upgrade-msw": "bunx msw init public --save"
  },
  "dependencies": {
    "hono": "^4.9.8",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router": "^7.9.1",
    "swr": "^2.3.6",
    "@age-of-hero/ui": "workspace:*",
    "@age-of-hero/core": "workspace:*"
  },
  "devDependencies": {
    "@age-of-hero/eslint-config-custom": "workspace:*",
    "@age-of-hero/typescript-config": "workspace:*",
    "@tailwindcss/vite": "^4.1.13",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react-swc": "^4.1.0",
    "globals": "^16.4.0",
    "jsdom": "^27.0.0",
    "msw": "^2.11.3",
    "npm-check-updates": "^18.3.0",
    "vite": "^7.1.7",
    "vitest": "^3.2.4"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
